<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_magento_backend_form" model="ir.ui.view">
        <field name="name">magento.backend.form</field>
        <field name="model">magento.backend</field>
        <field name="inherit_id"
            ref="connector_magento.view_magento_backend_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='import']" position="inside">
                <group>
                    <div>
                        <label
                            string="Export all values for binded products since"
                            class="oe_inline" />
                        <field name="export_products_from_date"
                            class="oe_inline" nolabel="1" />
                    </div>
                    <button name="export_product_catalog"
                        type="object" class="oe_highlight"
                        string="Export in background" />
                </group>
            </xpath>
            <xpath
                expr="//page[@name='advanced_configuration']//group[@name='main']"
                position="before">
                <group name="main_strategy" string="Main Otions">
                    <group>
                        <field name="product_synchro_strategy" />
                        <field name="default_magento_status" />
                    </group>
                </group>
            </xpath>
            <xpath
                expr="//page[@name='advanced_configuration']//group[@name='export_group']"
                position="attributes">
                <attribute name="attrs">{'readonly':[('product_synchro_strategy', '=', 'magento_first')]}</attribute>
            </xpath>
            <xpath
                expr="//page[@name='advanced_configuration']//group[@name='import_group']"
                position="attributes">
                <attribute name="attrs">{'readonly':[('product_synchro_strategy', '=', 'odoo_first')]}</attribute>
            </xpath>
            <xpath
                expr="//page[@name='advanced_configuration']//field[@name='default_category_id']"
                position="after">
                <field name="default_attribute_set_id"
                    domain="[('backend_id', '=', id)]" />
                
            </xpath>
            <button name="button_resync_products"
                position="after">
                <button name="button_sync_to_magento_products"
                    type="object" class="oe_highlight"
                    string="Resync all products from Odoo to Magento"
                    attrs="{'invisible':[('state', 'in', ['draft'])]}" />
            </button>
        </field>
    </record>
</odoo>